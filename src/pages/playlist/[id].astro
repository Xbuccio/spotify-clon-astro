---
import Layout from '../../layouts/Layout.astro';
import PlayListItemCard from 'src/components/PlayListItemCard.astro';
import { allPlaylists, playlists, songs } from 'src/lib/data';

const { id } = Astro.params

const playlist = allPlaylists.find(playlist => playlist.id === id )
---

<Layout title="Spotify Clon." >
	<div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-green-400"
  >
  <!-- page header-->
  
    <div class="relative z-10 px-6 pt-10">
      <!-- greatings --> 
      <h1 class="text-4xl font-bold">buenos dias</h1>

      <div class="flex flex-wrap mt-6 gap-4">
        {
          playlists.map((playlist) => <PlayListItemCard playlist={playlist} />)
        }
      </div>
      
    </div>

    <div class="absolute inset-0 bg-gradient-to-t from-zing-900 via-zinc-900/80">

    </div>
  </div>
</Layout>
<style></style>
